---
import { SITE_SETTINGS } from "@config/consts";
import { SkipLink } from "@components/odyssey-theme.js";
import BaseHead from "../components/head/BaseHead.astro";
import type { BaseHeadProps as BaseHeadProps } from "../components/head/BaseHead.astro";

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en" data-theme=`${SITE_SETTINGS.theme}`>
  <head>
    <BaseHead {...seo} />
  </head>
  <body>
    <SkipLink />
    <slot name="announcement-bar" />
    <slot name="header" />
    <main id="content">
      <slot />
    </main>
    <slot name="footer" />
    <style>
      main {
        padding-top: 2.5rem;
        padding-bottom: 2.5rem;
      }
    </style>
  </body>
</html>
