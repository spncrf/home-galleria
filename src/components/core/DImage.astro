---
import { getImageFromPath } from "@utils/images";
import { Image } from "astro:assets";

export interface Props {
  imgPath: string;
  alt: string;
  cssClasses: string[];
}

const { imgPath, alt, cssClasses } = Astro.props;

const img = getImageFromPath(imgPath);
---

<Image src={img} alt={alt} class:list={cssClasses} />
