---
import siteSettings from '@config/site-settings';
---

<p class="logo">{ siteSettings.brandName }</p>

<style>
  .logo {
    width: fit-content;
    margin: 0;
    font-family: var(--theme-font-family-serif);
    font-size: var(--font-size-md);
    color: inherit;
  }
  .logo:hover {
    text-decoration: underline;
    cursor: pointer;
  }
</style>
