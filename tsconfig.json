{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": "src",
    "types": ["astro/client"],
    "jsx": "react",
    "paths": {
      "@types/*": ["@types/*"],
      "@config/*": ["config/*"],
      "@icons/*": ["icons/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@images/*": ["images/*"]
    }
  }
}
